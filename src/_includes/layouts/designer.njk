{% extends "layouts/_base.njk" %}

{% block content %}
<div class="section heading student">
    <div class="name">
      <h1>{{studentFirstName | safe}}<br>{{studentLastName | safe}}</h1>
    </div>
    <div class="about">
      <div class="project-title">
        <h2>{{title | safe}}</h2>
      </div>
      <div class="body-text">
        <p>{{projectDescription | safe}}</p>
      </div>
      <div class="student-contact">
        <a href="#">{{studentWebsite | safe}}</a><br />
        <a mailto="#">{{studentContact | safe}}</a>
      </div>
    </div>
  </div>
  
  <div class="section splash">
    <script type="module" src="https://unpkg.com/@splinetool/viewer@1.8.9/build/spline-viewer.js" async></script>
    <spline-viewer loading-anim-type="spinner-small-light" url={{projectScan}}></spline-viewer>
  </div>
  
  <div class="section material">
    {{content | safe}}
  </div>
{% endblock %}